<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#808080" />
            <gradient android:angle="-90" android:startColor="#f0f0f0" android:endColor="#b0e0e0" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle"  >
                <corners android:radius="10dip" />
                <stroke android:width="1dip" android:color="#808080" />
                <gradient android:angle="-90" android:startColor="#234" android:endColor="#a24" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle"  >
                <corners android:radius="10dip" />
                <stroke android:width="1dip" android:color="#808080" />
                <gradient android:angle="-90" android:startColor="#0000ff" android:endColor="#000080" />
            </shape>
        </clip>
    </item>

</layer-list>